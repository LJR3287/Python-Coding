def slope(x1, y1, x2, y2):
    s=(y1 - y2) / (x1-x2)
    return s

# equation of line : y = mx + c   where m=slope
# rearrange          c = y - mx

def intercept(y, slope, x):
    c=y-slope*x
    return c

x1=int(input("Enter x1"))
y1=int(input("Enter y1"))
x2=int(input("Enter x2"))
y2=int(input("Enter y2"))

sl=slope(x1, y1, x2, y2)
print( "Slope is ", sl)
print( "Intercept is ", intercept(y1, sl, x1))
