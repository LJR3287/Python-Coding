def reverse(in_str):
    out_str=""
    i=len(in_str)-1
    while i>=0:
        out_str+=in_str[i]
        i-=1
    return out_str

def mirror(in_str):
    r_str=reverse(in_str)
    return in_str+r_str

print ("happy", mirror("happy"))
print ("Python", mirror("Python"))
print ("", mirror(""))
print ("a", mirror("a"))
